<UserControl x:Class="FMSE1.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FMSE1"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="uiGrid" Background="White">
        <TextBox x:Name="cityBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" ToolTip="Enter City..." Text="Enter City..." GotKeyboardFocus="CityGotFocus"/>
        <TextBox x:Name="countryBox" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="Enter Country..." VerticalAlignment="Top" Width="120" ToolTip="Enter Country..." GotKeyboardFocus="CountryGotFocus"/>
        <Button x:Name="destinationButton" Content="Set Destination" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" Width="120" Click="SetDestination_Clicked"/>
    </Grid>
</UserControl>
